<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gramophone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  font styles  -->
    <style name="heading_title_bold_large">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <!--  font styles  -->
    <style name="bold">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <!--  font styles  -->
    <style name="heading_title_medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


    <!--  font styles  -->
    <style name="regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <!--  Heading large  -->
    <style name="small">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="mini">
        <item name="android:fontFamily">@font/manrope_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/blue_opacity_80</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.ActionButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:drawablePadding">0dp</item>
    </style>

    <style name="TabIndicatorStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabRippleColor">@null</item>
        <item name="singleLine">true</item>
        <item name="tabSelectedTextColor">@color/brand_color</item>
        <item name="tabTextColor">@color/gray_strike_through</item>
        <item name="tabTextAppearance">@style/bold</item>
    </style>


    <style name="SocialTabIndicatorStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabRippleColor">@null</item>
        <item name="singleLine">true</item>
        <item name="tabSelectedTextColor">@color/brand_color</item>
        <item name="tabTextColor">@color/gray</item>
        <item name="tabTextAppearance">@style/bold</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>
</resources>