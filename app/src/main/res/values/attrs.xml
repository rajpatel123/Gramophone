<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomifyNavigationView">
        <attr name="menu" format="reference" />
        <attr name="item_padding" format="dimension" />
        <attr name="item_text_size" format="dimension" />
        <attr name="active_color" format="color" />
        <attr name="passive_color" format="color" />
        <attr name="pressed_color" format="color" />
        <attr name="animation_duration" format="integer" />
        <attr name="scale_percent" format="integer" />
    </declare-styleable>


    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandText" format="string" />
        <attr name="collapseText" format="string" />
    </declare-styleable>

    <declare-styleable name="CircularImageView">
        <attr name="border" format="boolean" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="shadow" format="boolean" />
        <attr name="shadow_color" format="color" />
        <attr name="shadow_radius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="StateProgressBar">

        <attr name="spb_stateBackgroundColor" format="color" />
        <attr name="spb_stateForegroundColor" format="color" />

        <attr name="spb_stateNumberBackgroundColor" format="color" />
        <attr name="spb_stateNumberForegroundColor" format="color" />

        <attr name="spb_currentStateDescriptionColor" format="color" />
        <attr name="spb_completeStateDescriptionColor" format="color" />
        <attr name="spb_nextLineStateDescriptionColor" format="color" />
        <attr name="spb_stateDescriptionColor" format="color" />

        <attr name="spb_stateSize" format="dimension" />

        <attr name="spb_stateTextSize" format="dimension" />

        <attr name="spb_stateDescriptionSize" format="dimension" />
        <attr name="spb_nextLineStateDescriptionSize" format="dimension" />

        <attr name="spb_stateLineThickness" format="dimension" />

        <attr name="spb_checkStateCompleted" format="boolean" />

        <attr name="spb_stateNumberIsDescending" format="boolean" />

        <attr name="spb_animateToCurrentProgressState" format="boolean" />

        <attr name="spb_enableAllStatesCompleted" format="boolean" />

        <attr name="spb_descriptionTopSpaceDecrementer" format="dimension" />

        <attr name="spb_descriptionTopSpaceIncrementer" format="dimension" />

        <attr name="spb_animationDuration" format="integer" />

        <attr name="spb_animationStartDelay" format="integer" />

        <attr name="spb_justifyMultilineDescription" format="boolean" />

        <attr name="spb_descriptionLinesSpacing" format="dimension" />

        <attr name="spb_maxDescriptionLines" format="integer" />


        <attr name="spb_currentStateNumber" format="enum">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="five" value="5" />
        </attr>


        <attr name="spb_maxStateNumber" format="enum">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="five" value="5" />
        </attr>

    </declare-styleable>
</resources>