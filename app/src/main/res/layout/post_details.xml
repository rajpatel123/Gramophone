<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_12sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileImage"
        state_image="@{model.image}"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/image_user_post"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:fontFamily="@font/manrope_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        tools:text="Thakur Bhanupratap" />

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:fontFamily="@font/manrope_medium"
        android:textSize="@dimen/_10ssp"
        tools:text="Indore ,Madhya Pradesh" />


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCity"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:fontFamily="@font/manrope_medium"
        android:textColor="@color/grey"
        android:textSize="@dimen/_10ssp"
        tools:text="15 Jul 2018 " />
    <ImageView
        android:id="@+id/iv_ellipse"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_toRightOf="@+id/tvDate"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_4ssp"
        android:layout_below="@+id/tvCity"
        android:src="@drawable/ellipse_post"
        />

    <TextView
        android:id="@+id/tvFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCity"
        android:layout_toRightOf="@id/iv_ellipse"
        android:fontFamily="@font/manrope_medium"
        android:layout_marginStart="@dimen/_4ssp"
        android:textColor="@color/red"
        android:textSize="@dimen/_10ssp"
        tools:text="Follow" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_toEndOf="@+id/tvName"
        android:background="@drawable/admin_tag_bg"
        android:paddingStart="@dimen/_5sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_2sdp">

        <ImageView
            android:id="@+id/ivLeaf"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/leaf_logo"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_toEndOf="@+id/ivLeaf"
            android:fontFamily="@font/manrope_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/_7ssp"
            tools:text="ADMIN" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_toStartOf="@+id/ivMenu"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_pin" />

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        app:srcCompat="@drawable/ic_menu_tripple_dot" />


    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/manrope_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        tools:text="Which is the system of farming in which the farmer is directly related to the state?" />

    <include
        android:id="@+id/banner_layout"
        layout="@layout/banner_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDesc"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner_layout"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:background="@drawable/following_bg"
        android:fontFamily="@font/manrope_medium"
        android:paddingStart="@dimen/_7sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:textColor="@color/blakish"
        android:textSize="@dimen/_10ssp"
        tools:text="Tomato" />

    <LinearLayout
        android:id="@+id/llActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTag"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_like" />

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_toEndOf="@+id/ivLike"
                tools:text="2 Likes" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_comment" />

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_toEndOf="@+id/ivComment"
                tools:text="Comments" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">

            <ImageView
                android:id="@+id/ivWhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                android:layout_toStartOf="@+id/ivFacebook"
                app:srcCompat="@drawable/ic_whatsapp" />

            <ImageView
                android:id="@+id/ivFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                android:layout_toStartOf="@+id/ivBookmark"
                app:srcCompat="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/ivBookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                app:srcCompat="@drawable/ic_bookmark" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/llActions1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llActions"
        android:layout_marginStart="@dimen/_12sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfileImage1"
            state_image="@{model.image}"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/dummy_jacob"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <RelativeLayout
            android:id="@+id/rel_expert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivProfileImage1"
            android:layout_marginStart="@dimen/_30sdp"
            android:background="@drawable/expert_rel_bg"
            android:padding="@dimen/_4ssp">

            <TextView
                android:id="@+id/tvName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/manrope_bold"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                tools:text="Jacob Rana" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@+id/tvName1"
                android:background="@drawable/expert_bg"
                android:fontFamily="@font/manrope_medium"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_5ssp"
                android:textStyle="bold"
                tools:text="EXPERT" />



            <TextView
                android:id="@+id/tv_long_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName1"
                android:fontFamily="@font/manrope_light"
                android:padding="@dimen/_5sdp"
                android:text="This is message which sent in bulletin will be displayed here"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_long_desc"
                android:layout_marginTop="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/images_cookies" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_expert"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_8ssp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="3:40 PM "
            android:textColor="@color/gray"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_15ssp"
            android:layout_below="@+id/rel_expert"
            android:layout_marginLeft="@dimen/_110sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/horizontal_dot" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llActions3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llActions1"
        android:layout_marginStart="@dimen/_12sdp">

        <ImageView
            android:id="@+id/ivCommentBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_comment"
            app:tint="@color/grey" />

        <TextView
            android:id="@+id/tvCommentBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_toEndOf="@+id/ivCommentBottom"
            android:textColor="@color/grey"
            tools:text="Write a comment..." />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPin"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:background="@color/white"
        android:elevation="@dimen/_1sdp"
        android:visibility="gone"
        android:minWidth="@dimen/_140sdp"
        android:minHeight="@dimen/_140sdp"
        android:padding="@dimen/_12sdp" />

</RelativeLayout>