<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="agstack.gramophone.ui.orderdetails.model.Product" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/linked_product_bg">

        <RelativeLayout
            android:id="@+id/rlQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvQuantityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/manrope_medium"
                android:textColor="@color/blakish"
                android:textSize="@dimen/_12ssp"
                tools:text="अनुशंसित मात्रा प्रति एकड़" />

            <RelativeLayout
                android:id="@+id/rlQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/quantity_bg">

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/manrope_bold"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/_12ssp"
                    tools:text="100-200 Gram" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/rlQty"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/blue" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivProduct"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/rlQuantity"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/image"
            android:src="@drawable/dummy_neem_cake" />

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlQuantity"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_toEndOf="@+id/ivProduct"
            android:layout_toStartOf="@+id/tvAddToCart"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center_vertical"
            android:lineSpacingExtra="-2sp"
            android:maxLines="3"
            android:text="@string/product_fungicide"
            android:textColor="@color/blakish"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tvSellingPrice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:layout_below="@+id/tvProductName"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@+id/ivProduct"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1sp"
            android:text="@string/_799_00"
            android:textColor="@color/blakish"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvActualPrice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:layout_below="@+id/tvProductName"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@+id/tvSellingPrice"
            android:background="@drawable/strike_through"
            android:fontFamily="@font/manrope_bold"

            android:gravity="center_vertical"
            android:lineSpacingExtra="1sp"
            android:text="@string/_1_290"
            android:textColor="@color/gray_strike_through"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvDiscountPercent"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:layout_below="@+id/tvProductName"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@+id/tvActualPrice"
            android:background="@drawable/off_background"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1sp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/green_dark"
            android:textSize="13sp"
            tools:text="50%" />

        <TextView
            android:id="@+id/tvAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlQuantity"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rounded_corner_8_solid_white_stroke_orange"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center_vertical"
            android:lineSpacingExtra="-2sp"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:text="@string/add_to_cart"
            android:textColor="@color/orange"
            android:textSize="@dimen/_11ssp" />

    </RelativeLayout>
</layout>