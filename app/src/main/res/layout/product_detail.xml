<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="agstack.gramophone.ui.home.product.ProductDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.product.ProductDetailsActivity">

        <include
            android:id="@+id/myToolbar"
            layout="@layout/layout_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myToolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_product_images_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_9sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_17sdp"
                        android:layout_alignParentStart="true">

                        <RatingBar
                            android:id="@+id/rating"
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="4"
                            android:stepSize="0.1"
                            android:theme="@style/RatingBar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:text="15 Farmers"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:fontFamily="@font/manrope_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/_78sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:background="@drawable/button_oval"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_7sdp"
                                app:srcCompat="@drawable/ic_whatsapp_green" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/manrope_bold"
                                android:gravity="center"
                                android:text="@string/share"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13ssp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_marginLeft="@dimen/_11sdp"
                            android:layout_marginRight="@dimen/_19sdp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_heart_blank" />

                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/dummy_neem_cake" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/yellow"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/_6sdp"
                        android:fontFamily="@font/manrope_bold"
                        android:text="Use Gram Cash on this product and get discount"
                        android:textColor="@color/blakish"
                        android:textSize="@dimen/_11ssp"
                        app:drawableStartCompat="@drawable/ic_offer" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_bold"
                    android:maxLines="3"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="Bioenzyme Organic Cold Pressed Water Soluble Pure Neem Oil"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    style="@style/heading_title_bold_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/strike_through"
                    android:text="M.R.P.:	₹2,990.00"
                    android:textColor="#666666"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    style="@style/heading_title_bold_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:text="Price:	₹799.00"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    style="@style/heading_title_bold_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:text="Total Saving ₹2,100.00  (60%)"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    style="@style/heading_title_bold_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:text="Hurry! Only 5 Products Left"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_12ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@color/gray_stroke" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_bold"
                    android:maxLines="3"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_16sdp"
                    android:text="Quick Highlights"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:fontFamily="@font/manrope_regular"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:text="Pesticide, Fertilizer, Manure, Soil
\nUsed for cold pressed neem oil, insecticide spray, natural pesticide
\nAvailable as Liquid
\nPacked in Bottle
\nPack of 1"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_expertAdvice"
                android:layout_width="0dp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_weight="1"
                android:onClick="@{()->viewModel.onAddToCartClicked()}"
                android:paddingStart="@dimen/_3sdp"
                android:text="@string/expert_advice"
                android:textAllCaps="true"
                android:textSize="@dimen/_14ssp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_addtocart"
                android:layout_width="0dp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_weight="1"
                android:onClick="@{()->viewModel.onAddToCartClicked()}"
                android:paddingStart="@dimen/_3sdp"
                android:text="@string/add_to_cart"
                android:textAllCaps="true"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>