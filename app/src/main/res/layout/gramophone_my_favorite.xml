<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:layout_weight="1"
               android:minHeight="@dimen/_90sdp">

               <RelativeLayout
                   android:id="@+id/llProductLinearLayout"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="@dimen/_6sdp"
                   android:layout_marginBottom="@dimen/_10sdp"
                   android:background="@drawable/rounded_corner_8_solid_orange_light"
                   android:orientation="vertical"
                   android:backgroundTint="#FFEDE7"
                   android:paddingEnd="@dimen/_16sdp">

                   <ImageView
                       android:id="@+id/tvLanguageTitle"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="@dimen/_16sdp"
                       android:layout_marginTop="@dimen/_13sdp"
                       android:fontFamily="@font/manrope_bold"
                       android:textSize="@dimen/_14ssp"
                       android:textStyle="normal"
                       app:srcCompat="@drawable/ic_products" />

                   <TextView
                       android:id="@+id/tvProduct"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/tvLanguageTitle"
                       android:layout_marginStart="@dimen/_16sdp"
                       android:layout_marginTop="@dimen/_24sdp"
                       android:fontFamily="@font/manrope_semibold"
                       android:text="@string/products"
                       android:textColor="@color/orange"
                       android:textSize="@dimen/_12ssp" />

                   <FrameLayout
                       android:id="@+id/imgSelected"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:layout_marginTop="@dimen/_16sdp"
                       android:background="@drawable/rounded_corner_8_solid_white_stroke"
                       android:contentDescription="@string/image"
                       android:paddingStart="@dimen/_5sdp"
                       android:paddingTop="@dimen/_1sdp"
                       android:paddingEnd="@dimen/_8sdp"
                       android:paddingBottom="@dimen/_1sdp"
                       android:src="@drawable/ic_tick_check"
                       >

                       <TextView
                           android:id="@+id/tvProductCount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/manrope_medium"
                           android:text="12"
                           android:textColor="@color/black"
                           android:textSize="@dimen/_10ssp" />
                   </FrameLayout>
               </RelativeLayout>

           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:layout_weight="1"
               android:minHeight="@dimen/_90sdp">

               <RelativeLayout
                   android:id="@+id/llArticleLinearLayout"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="@dimen/_6sdp"
                   android:layout_marginBottom="@dimen/_10sdp"
                   android:background="@drawable/rounded_corner_8_solid_orange_light"
                   android:orientation="vertical"
                   android:backgroundTint="#F6F4FF"
                   android:paddingEnd="@dimen/_16sdp">

                   <ImageView
                       android:id="@+id/ivArticle"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="@dimen/_16sdp"
                       android:layout_marginTop="@dimen/_8sdp"
                       android:fontFamily="@font/manrope_bold"
                       android:textSize="@dimen/_14ssp"
                       android:textStyle="normal"
                       app:srcCompat="@drawable/ic_article_favorite" />

                   <TextView
                       android:id="@+id/tvArticleTitle"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/ivArticle"
                       android:layout_marginStart="@dimen/_16sdp"
                       android:layout_marginTop="@dimen/_16sdp"
                       android:fontFamily="@font/manrope_semibold"
                       android:text="@string/articles"
                       android:textSize="@dimen/_12ssp"
                       android:textColor="@color/purple_500"/>

                   <FrameLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:layout_marginTop="@dimen/_16sdp"
                       android:background="@drawable/rounded_corner_8_solid_white_stroke"
                       android:contentDescription="@string/image"
                       android:paddingStart="@dimen/_5sdp"
                       android:paddingTop="@dimen/_1sdp"
                       android:paddingEnd="@dimen/_8sdp"
                       android:paddingBottom="@dimen/_1sdp"
                       android:src="@drawable/ic_tick_check"
                       >

                       <TextView
                           android:id="@+id/tvArticleCount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/manrope_medium"
                           android:text="12"
                           android:textColor="@color/black"
                           android:textSize="@dimen/_10ssp" />
                   </FrameLayout>
               </RelativeLayout>

           </LinearLayout>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:layout_weight="1"
               android:minHeight="@dimen/_90sdp">

               <RelativeLayout
                   android:id="@+id/llPostLinearLayout"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="@dimen/_6sdp"
                   android:layout_marginBottom="@dimen/_10sdp"
                   android:background="@drawable/rounded_corner_8_solid_orange_light"
                   android:orientation="vertical"
                   android:backgroundTint="#FFF0F9"
                   android:paddingEnd="@dimen/_16sdp">

                   <ImageView
                       android:id="@+id/ivPosts"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="@dimen/_16sdp"
                       android:layout_marginTop="@dimen/_13sdp"
                       android:fontFamily="@font/manrope_bold"
                       android:textSize="@dimen/_14ssp"
                       android:textStyle="normal"
                       app:srcCompat="@drawable/ic_ic_post" />

                   <TextView
                       android:id="@+id/tvPostTitle"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/ivPosts"
                       android:layout_marginStart="@dimen/_16sdp"
                       android:layout_marginTop="@dimen/_24sdp"
                       android:fontFamily="@font/manrope_semibold"
                       android:text="@string/posts"
                       android:textSize="@dimen/_12ssp"
                       android:textColor="#AD4280"/>

                   <FrameLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:layout_marginTop="@dimen/_16sdp"
                       android:background="@drawable/rounded_corner_8_solid_white_stroke"
                       android:contentDescription="@string/image"
                       android:paddingStart="@dimen/_5sdp"
                       android:paddingTop="@dimen/_1sdp"
                       android:paddingEnd="@dimen/_8sdp"
                       android:paddingBottom="@dimen/_1sdp"
                       android:src="@drawable/ic_tick_check"
                       >

                       <TextView
                           android:id="@+id/tvPostCount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/manrope_medium"
                           android:text="12"
                           android:textColor="@color/black"
                           android:textSize="@dimen/_10ssp" />
                   </FrameLayout>
               </RelativeLayout>

           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:layout_weight="1"
               android:minHeight="@dimen/_90sdp">

               <RelativeLayout
                   android:id="@+id/llTVLinearLayout"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="@dimen/_6sdp"
                   android:layout_marginBottom="@dimen/_10sdp"
                   android:background="@drawable/rounded_corner_8_solid_orange_light"
                   android:orientation="vertical"
                   android:backgroundTint="#E8F0FF"
                   android:paddingEnd="@dimen/_16sdp">

                   <ImageView
                       android:id="@+id/ivTv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="@dimen/_16sdp"
                       android:layout_marginTop="@dimen/_8sdp"
                       android:fontFamily="@font/manrope_bold"
                       android:textSize="@dimen/_14ssp"
                       android:textStyle="normal"
                       app:srcCompat="@drawable/ic_gramo_tv" />

                   <TextView
                       android:id="@+id/tvTVTitle"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/ivTv"
                       android:layout_marginStart="@dimen/_16sdp"
                       android:layout_marginTop="@dimen/_18sdp"
                       android:fontFamily="@font/manrope_semibold"
                       android:text="@string/gramophone_tv"
                       android:textSize="@dimen/_12ssp"
                       android:textColor="@color/brand_color"/>

                   <FrameLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:layout_marginTop="@dimen/_16sdp"
                       android:background="@drawable/rounded_corner_8_solid_white_stroke"
                       android:contentDescription="@string/image"
                       android:paddingStart="@dimen/_5sdp"
                       android:paddingTop="@dimen/_1sdp"
                       android:paddingEnd="@dimen/_8sdp"
                       android:paddingBottom="@dimen/_1sdp"
                       android:src="@drawable/ic_tick_check"
                       >

                       <TextView
                           android:id="@+id/tvTVCount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/manrope_medium"
                           android:text="12"
                           android:textColor="@color/black"

                           android:textSize="@dimen/_10ssp" />
                   </FrameLayout>
               </RelativeLayout>

           </LinearLayout>

       </LinearLayout>
    </LinearLayout>
</layout>
