<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="agstack.gramophone.ui.verifyotp.viewmodel.VerifyOtpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <RelativeLayout
            android:id="@+id/rlToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/_58sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:src="@mipmap/logo" />

            <LinearLayout
                android:id="@+id/llHelpLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@+id/llLanguageLinearLayout"
                android:background="@drawable/rounded_corner_with_grey_color"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:onClick="@{ ()-> viewModel.onHelpClick(llHelpLinearLayout) }"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_toStartOf="@+id/tv_help"
                    app:srcCompat="@drawable/ic_phone_call" />

                <TextView
                    android:id="@+id/tv_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="@string/help"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLanguageLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/rounded_corner_with_grey_color"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:onClick="@{ ()-> viewModel.onLanguageClick(llLanguageLinearLayout) }"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_toStartOf="@+id/tv_help"
                    app:srcCompat="@drawable/ic_langague" />

                <TextView
                    android:id="@+id/tv_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="@string/eng"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>


        </RelativeLayout>


        <View
            android:id="@+id/toolbar_separator"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#F2F4F7"
            app:layout_constraintTop_toBottomOf="@+id/rlToolbar"/>



        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/toolbar_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_31sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/heading_title_bold_large"
                android:text="@string/welcome_msg"
                android:textColor="@color/brand_color"/>

            <TextView
                android:id="@+id/tvOTPmessageWithNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/small"
                android:text="@={viewModel.otpHint}"
                android:textColor="@color/grey"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/_10ssp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_22sdp"
                >

                <TextView
                    style="@style/small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_otp"
                    android:textColor="@color/blakish" />

                <TextView
                    android:id="@+id/tvChangeNumber"
                    style="@style/small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:text="@string/changeno"
                    android:onClick="@{ ()-> viewModel.changeNumber(tvChangeNumber) }"
                    android:textColor="@color/green_dark" />
            </RelativeLayout>

            <com.chaos.view.PinView
                android:id="@+id/firstPinView"
                style="@style/PinWidget.PinView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="Hint."
                android:layout_marginTop="@dimen/_3sdp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="@={viewModel.otp}"

                android:textStyle="bold"
                android:fontFamily="@font/manrope_bold"
                app:cursorColor="@color/brand_color"
                app:cursorWidth="2dp"
                app:hideLineWhenFilled="false"
                app:itemCount="6"
                app:itemHeight="46dp"
                app:itemRadius="4dp"
                app:itemSpacing="@dimen/_8sdp"
                app:itemWidth="46dp"
                android:state_selected="true"
                app:lineColor="@color/grey"
                app:lineWidth="2dp"
                app:viewType="rectangle" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                >

                <TextView
                    android:id="@+id/tvResend"
                    style="@style/small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resend_otp"
                    android:visibility="@{viewModel.timeOver? View.GONE:View.VISIBLE}"

                    android:textColor="@color/blakish" />

                <TextView
                    android:id="@+id/tvResendOtp"
                    style="@style/small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:onClick="@{ ()-> viewModel.resendOTP(tvResendOtp) }"
                    android:text="@string/resend"
                    android:textColor="@color/green"

                    android:visibility="@{viewModel.timeOver? View.VISIBLE:View.GONE}"

                    />

                <TextView
                    android:id="@+id/tvTime"
                    style="@style/small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_toEndOf="@+id/tvResend"
                    android:textColor="@color/brand_color"
                    />
            </RelativeLayout>

        </LinearLayout>



        <TextView
            android:id="@+id/verifyOtpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_continue"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:clickable="true"
            android:onClick="@{ ()-> viewModel.submitOtp(verifyOtpBtn) }"
            android:padding="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:background="@drawable/btn_rounded_corner"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:focusable="true" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>