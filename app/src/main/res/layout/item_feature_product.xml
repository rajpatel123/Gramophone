<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/rounded_corner_8_solid_white"
        android:orientation="vertical">

        <TextView
            style="@style/regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_corner_4_solid_green"
            android:padding="4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:text="20% Off" />

        <ImageView
            android:layout_width="@dimen/_112sdp"
            android:layout_height="@dimen/_112sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dummy_feature_product" />

        <TextView
            style="@style/heading_title_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:textColor="@color/blakish"
            android:textSize="@dimen/_12sdp"
            android:text="fungicides Crystal Bavistin 50% WP Fun gicide Carbe ..." />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <TextView
                style="@style/heading_title_bold_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/blakish"
                android:textSize="@dimen/_12ssp"
                android:text="₹ 900" />

            <TextView
                style="@style/heading_title_bold_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/strike_through"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/gray_strike_through"
                android:textSize="@dimen/_12ssp"
                android:text="₹ 1800" />

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>