                            android:background="@drawable/rounded_corner_32"
                            android:backgroundTint="@color/pink"
                            android:paddingStart="16dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_10sdp"
                                android:fontFamily="@font/manrope_bold"
                                android:text="@string/view_all"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="normal"
                                app:drawableEndCompat="@drawable/ic_arrow_right" />

                        </FrameLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@color/mute_grey"
                            android:paddingStart="@dimen/_20sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivWhatsapp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_whatsapp_large" />

                            <TextView
                                android:id="@+id/tvGramophone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_14sdp"
                                android:layout_toEndOf="@+id/ivWhatsapp"
                                android:fontFamily="@font/manrope_bold"
                                android:text="@string/gramophone_tv"
                                android:textColor="@color/blakish"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvGramophone"
                                android:layout_marginStart="@dimen/_14sdp"
                                android:layout_toStartOf="@+id/scAppTour"
                                android:layout_toEndOf="@+id/ivWhatsapp"
                                android:fontFamily="@font/manrope_medium"
                                android:text="@string/receive_order_related_information_on_whatsapp"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_13ssp"
                                android:textStyle="normal" />

                            <!--android:checked="@={viewModel.swAppTourChecked}"
                                android:onCheckedChanged="@{ ()-> viewModel.onAppTourCheckChanged(swAppTour) }"-->
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/scAppTour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:checked="false" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_70sdp"
                            android:background="@drawable/ic_gramophone_promise_bg"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16sdp"
                                android:fontFamily="@font/manrope_bold"
                                android:gravity="center_horizontal"
                                android:text="@string/gramophone_promise"
                                android:textColor="@color/blakish"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="normal" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/manrope_bold"
                                    android:gravity="center"
                                    android:text="@string/_100_genuine_nproducts"
                                    android:textColor="@color/blakish"
                                    android:textSize="10sp"
                                    android:textStyle="normal"
                                    app:drawableTopCompat="@drawable/ic_promise_genuine_products"
                                    tools:ignore="SmallSp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/manrope_bold"
                                    android:gravity="center"
                                    android:text="@string/free_shipping_nat_doorstep"
                                    android:textColor="@color/blakish"
                                    android:textSize="10sp"
                                    android:textStyle="normal"
                                    app:drawableTopCompat="@drawable/ic_promise_free_shipping"
                                    tools:ignore="SmallSp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/manrope_bold"
                                    android:gravity="center"
                                    android:text="@string/best_price_nguaranteed"
                                    android:textColor="@color/blakish"
                                    android:textSize="10sp"
                                    android:textStyle="normal"
                                    app:drawableTopCompat="@drawable/ic_promise_best_price"
                                    tools:ignore="SmallSp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/manrope_bold"
                                    android:gravity="center"
                                    android:text="@string/genuine_ngst_bill"
                                    android:textColor="@color/blakish"
                                    android:textSize="10sp"
                                    android:textStyle="normal"
                                    app:drawableTopCompat="@drawable/ic_promise_gst"
                                    tools:ignore="SmallSp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/manrope_bold"
                                    android:gravity="center"
                                    android:text="@string/easy_return"
                                    android:textColor="@color/blakish"
                                    android:textSize="10sp"
                                    android:textStyle="normal"
                                    app:drawableTopCompat="@drawable/ic_promise_easy_return"
                                    tools:ignore="SmallSp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/manrope_bold"
                                    android:gravity="center"
                                    android:text="@string/free_expert_nadvice"
                                    android:textColor="@color/blakish"
                                    android:textSize="10sp"
                                    android:textStyle="normal"
                                    app:drawableTopCompat="@drawable/ic_promise_expert_advice"
                                    tools:ignore="SmallSp" />

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_wheat_bg" />

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_home_banner" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>