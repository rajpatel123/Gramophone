<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="Delete Post"
        android:textColor="#0638A0"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_dailogue_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_64sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:textColor="#10203E"
        android:text="Are you sure you want to Delete this  Post? This action can not be undone."
        android:textSize="@dimen/_16ssp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_115sdp"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tv_cancel_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_180sdp"
        android:layout_marginTop="@dimen/_158sdp"
        android:text="Cancel"
        android:textStyle="bold"
        android:textColor="#606774"
        android:textSize="@dimen/_17ssp" />

    <TextView
        android:id="@+id/tv_Del_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_158sdp"
        android:layout_toRightOf="@+id/tv_cancel_box"
        android:text="Delete"
        android:textStyle="bold"
        android:textColor="#0638A0"
        android:textSize="@dimen/_17ssp" />





</RelativeLayout>


















