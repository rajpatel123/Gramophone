<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="agstack.gramophone.ui.home.product.model.ProductSkuOfferModel" />
    </data>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/productDetailsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:background="@{model.selected ? @drawable/selected_product_background: @drawable/deselected_product_background}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"


                    >

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:visibility="@{model.selected? View.VISIBLE:View.GONE}"
                        app:srcCompat="@drawable/ic_tick_check" />


                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioBtn"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:checked="@{model.selected}"
                        android:visibility="@{model.selected? View.GONE:View.VISIBLE}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProductWeight"
                        style="@style/TextSize16Sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get Flat 5% Off" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/manrope_medium"
                        android:text="Offer valid on SKU 500"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/manrope_medium"
                        android:text="Valid till March 2023"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llbottom"
                android:layout_below="@+id/ll_top"
                android:background="@drawable/ic_pink_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:padding="@dimen/_2sdp"

                android:orientation="horizontal">


                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="center"
                    android:text="Save Rs 100"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <View
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/mute_grey"/>

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="center"
                    android:text="Pay only ₹ 100"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/manrope_medium"
                    android:gravity="center"
                    android:background="@drawable/strike_through"
                    android:text=" ₹200"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>



            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>