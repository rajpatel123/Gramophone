<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <!--<variable
            name="model"
            type="agstack.gramophone.ui.home.product.model.ProductWeightPriceModel" />-->
    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/productDetailsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/deselected_product_background"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="@dimen/_156sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_156sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_20sdp"
                    app:srcCompat="@drawable/dummy_feature_product" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mute_grey"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProductDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:fontFamily="@font/manrope_medium"
                    android:text="Fungicides Crystal Baviston 50% WP"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/_13ssp" />


                <TextView
                    style="@style/heading_title_bold_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sp"
                    style="@style/heading_title_bold_large"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="₹799.00"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/_14ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/heading_title_bold_large"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:background="@drawable/strike_through"
                    android:gravity="center"
                    android:text="₹1,290"
                    android:textColor="@color/oldmrpcolor"
                    android:textSize="@dimen/_11ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/heading_title_bold_large"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:gravity="center"
                    android:text="60% off"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>