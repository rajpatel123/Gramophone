<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

        <import type="android.view.View" />

        <variable
            name="rvm"
            type="agstack.gramophone.ui.home.product.activity.ProductDetailsViewModel">


        </variable>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_personal_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_silver_gradient"
            android:orientation="horizontal"
            android:padding="@dimen/_24sdp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="5" />

                    <ProgressBar
                        android:id="@+id/progressbar_5rating"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:indeterminate="false"
                        android:max="100"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:progress="40"
                        android:progressTint="@color/green_dark"
                        app:trackCornerRadius="2dp"
                        app:trackThickness="@dimen/_5sdp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4" />

                    <ProgressBar
                        android:id="@+id/progressbar_4rating"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:indeterminate="false"
                        android:max="100"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:progress="40"
                        android:progressTint="@color/green" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="3" />

                    <ProgressBar
                        android:id="@+id/progressbar_3rating"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:indeterminate="false"
                        android:max="100"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:progress="40"
                        android:progressTint="@color/star_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2" />

                    <ProgressBar
                        android:id="@+id/progressbar_2rating"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:indeterminate="false"
                        android:max="100"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:progress="40"
                        android:progressTint="#FF9376" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1" />

                    <ProgressBar
                        android:id="@+id/progressbar_1rating"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:indeterminate="false"
                        android:max="100"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:progress="10"
                        android:progressTint="#F8111B" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_weight="5">

                <LinearLayout
                    android:id="@+id/llrating_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_rating_all"
                        style="@style/TextSize20Sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.5" />

                    <TextView
                        android:id="@+id/tv_outoftotal"
                        style="@style/TextSize14Sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Out of 5"
                        android:textColor="@color/gray" />

                </LinearLayout>


                <RatingBar
                    android:id="@+id/rating_stars_all"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llrating_all"
                    android:isIndicator="true"
                    android:max="5"
                    android:numStars="5"
                    android:rating="5"
                    android:scaleX=".8"
                    android:scaleY=".8"

                    android:stepSize="0.1"
                    android:theme="@style/RatingBar"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rating_stars_all"
                    android:fontFamily="@font/manrope_bold"
                    android:padding="@dimen/_2sdp"
                    android:hint="Based on 38 reviews"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_reviews_product"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="vertical"
            tools:itemCount="2"
            tools:listitem="@layout/rating_review_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</layout>