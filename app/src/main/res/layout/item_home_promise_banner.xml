<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_gramophone_promise_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center_horizontal"
            android:text="@string/gramophone_promise"
            android:textColor="@color/blakish"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_bold"
                android:gravity="center"
                android:text="@string/_100_genuine_nproducts"
                android:textColor="@color/blakish"
                android:textSize="10sp"
                android:textStyle="normal"
                app:drawableTopCompat="@drawable/ic_promise_genuine_products"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_bold"
                android:gravity="center"
                android:text="@string/free_shipping_nat_doorstep"
                android:textColor="@color/blakish"
                android:textSize="10sp"
                android:textStyle="normal"
                app:drawableTopCompat="@drawable/ic_promise_free_shipping"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_bold"
                android:gravity="center"
                android:text="@string/best_price_nguaranteed"
                android:textColor="@color/blakish"
                android:textSize="10sp"
                android:textStyle="normal"
                app:drawableTopCompat="@drawable/ic_promise_best_price"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_bold"
                android:gravity="center"
                android:text="@string/genuine_ngst_bill"
                android:textColor="@color/blakish"
                android:textSize="10sp"
                android:textStyle="normal"
                app:drawableTopCompat="@drawable/ic_promise_gst"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_bold"
                android:gravity="center"
                android:text="@string/easy_return"
                android:textColor="@color/blakish"
                android:textSize="10sp"
                android:textStyle="normal"
                app:drawableTopCompat="@drawable/ic_promise_easy_return"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_bold"
                android:gravity="center"
                android:text="@string/free_expert_nadvice"
                android:textColor="@color/blakish"
                android:textSize="10sp"
                android:textStyle="normal"
                app:drawableTopCompat="@drawable/ic_promise_expert_advice"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wheat_bg" />

        <View
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:background="@color/gray_stroke"
            android:layout_height="@dimen/_8sdp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>