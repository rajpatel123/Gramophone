<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_product_detail"
        app:layout_constraintTop_toBottomOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_corner_4_solid_green"
                android:fontFamily="@font/manrope_regular"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="20% Off"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_180sdp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/dummy_neem_cake" />

            <RelativeLayout
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:background="@color/yellow"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/_6sdp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Use Gram Cash on this product and get discount"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/_11ssp"
                    app:drawableStartCompat="@drawable/ic_offer" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="3"
                android:paddingStart="@dimen/_16sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="Bioenzyme Organic Cold Pressed Water Soluble Pure Neem Oil"
                android:textColor="@color/blakish"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                style="@style/heading_title_bold_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/strike_through"
                android:text="M.R.P.:	₹2,990.00"
                android:textColor="#666666"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                style="@style/heading_title_bold_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Price:	₹799.00"
                android:textColor="@color/blakish"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                style="@style/heading_title_bold_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Total Saving ₹2,100.00  (60%)"
                android:textColor="@color/green"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                style="@style/heading_title_bold_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Hurry! Only 5 Products Left"
                android:textColor="@color/orange"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp"
                android:background="@color/gray_stroke"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="3"
                android:paddingStart="@dimen/_16sdp"
                android:paddingTop="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:text="Quick Highlights"
                android:textColor="@color/blakish"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:fontFamily="@font/manrope_regular"
                android:text="Pesticide, Fertilizer, Manure, Soil
\nUsed for cold pressed neem oil, insecticide spray, natural pesticide
\nAvailable as Liquid
\nPacked in Bottle
\nPack of 1"
                android:textColor="@color/blakish"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
