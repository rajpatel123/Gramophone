<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="agstack.gramophone.ui.createpost.viewmodel.CreatePostViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                tools:context=".ui.address.view.AddOrUpdateAddressActivity">

                <ProgressBar
                    android:id="@+id/stateProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/zxing_viewfinder_laser"
                    android:elevation="@dimen/_1sdp"
                    android:visibility="@{viewModel.loading? View.VISIBLE:View.GONE}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:minHeight="@dimen/_130sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/ic_cross"
                        app:tint="@color/white" />


                    <TextView
                        android:id="@+id/tvCompleteAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="42dp"
                        android:fontFamily="@font/manrope_bold"
                        android:text="Create Post"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:layout_marginEnd="@dimen/_24sdp"
                    android:background="@color/white"
                    android:padding="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="Write your question about your crop eg. how do I prevent this bug?"
                            android:textSize="@dimen/_12ssp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_45sdp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@drawable/poll_rectangle_bg"
                                android:padding="@dimen/_6sdp"
                                android:text=" @Tag People"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@drawable/poll_rectangle"
                                android:padding="@dimen/_6sdp"
                                android:text="# Add crop"
                                android:textSize="@dimen/_12ssp" />


                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_250sdp"
                    android:layout_marginBottom="@dimen/_150sdp"
                    android:background="@color/light_gray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="Add Image"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="Add one or more picture " />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/iv_big_preview"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/preview_frame" />

                        <ImageView
                            android:id="@+id/ivAddImage"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_140sdp"
                            android:layout_marginTop="@dimen/_150sdp"
                            android:background="@drawable/admin_tag_bg"
                            android:onClick="@{()->viewModel.openOrCapture(ivAddImage)}"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_plus"
                            android:visibility="visible"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/iv_delete_image"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_140sdp"
                            android:layout_marginTop="@dimen/_150sdp"
                            android:src="@drawable/ic_delete"
                            android:visibility="gone" />


                        <ImageView
                            android:id="@+id/iv_preview_first"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_toRightOf="@+id/iv_big_preview"
                            android:src="@drawable/preview_frame" />

                        <ImageView
                            android:id="@+id/ivAddImageOne"
                            android:layout_width="16dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_preview_first"
                            android:layout_marginStart="@dimen/_265sdp"
                            android:layout_marginTop="-35dp"
                            android:background="@drawable/admin_tag_bg"
                            android:onClick="@{()->viewModel.openOrCapture(ivAddImageOne)}"
                            android:src="@drawable/ic_plus"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/iv_sec_preview"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_below="@+id/iv_preview_first"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/iv_big_preview"
                            android:src="@drawable/preview_frame" />

                        <ImageView
                            android:id="@+id/ivAddImageTwo"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_below="@+id/iv_sec_preview"
                            android:layout_marginStart="@dimen/_260sdp"
                            android:layout_marginTop="-35dp"
                            android:onClick="@{()->viewModel.openOrCapture(ivAddImageTwo)}"
                            android:background="@drawable/admin_tag_bg"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_plus"
                            app:tint="@color/white" />

                    </RelativeLayout>


                </LinearLayout>

            </FrameLayout>

        </ScrollView>

        <TextView
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/btn_disabled"
            android:gravity="center"
            android:onClick="@{ ()-> viewModel.submitAddress() }"
            android:padding="@dimen/_13sdp"
            android:text="Post now "
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />
    </RelativeLayout>
</layout>