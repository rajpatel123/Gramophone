<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="agstack.gramophone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:name=".utils.GramAppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/leaf_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/leaf_logo"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.splash.view.SplashActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.language.view.LanguageActivity"
            android:noHistory="true" />
        <activity android:name=".ui.verifyotp.view.VerifyOtpActivity" />
        <activity android:name=".ui.apptour.view.AppTourActivity" />
        <activity android:name=".ui.profileselection.view.ProfileSelectionActivity" />
        <activity android:name=".ui.login.view.LoginActivity"></activity>
        <activity android:name=".ui.home.view.HomeActivity" />
        <activity android:name=".ui.profile.view.ProfileActivity" />
        <activity android:name=".ui.home.product.activity.ProductDetailsActivity" />
        <activity android:name=".ui.cart.view.CartActivity" />
        <activity android:name=".ui.order.view.OrderListActivity" />
        <activity android:name=".ui.checkout.CheckoutStatusActivity" />
        <activity android:name=".ui.offer.OfferDetailActivity" />
        <activity android:name=".ui.orderdetails.OrderDetailsActivity" />
        <activity android:name=".ui.webview.view.WebViewActivity" />

        <service android:name=".pushnotification.MyFirebaseMessagingService" />
    </application>

</manifest>