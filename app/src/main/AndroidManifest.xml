<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="agstack.gramophone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
        <intent>
            <action android:name="android.intent.action.PICK" />
            <data android:mimeType="image/*" />
        </intent>
        <intent>
            <action android:name="android.intent.action.ACTION_GET_CONTENT" />
            <data android:mimeType="image/*" />
        </intent>

    </queries>

    <application
        android:name=".utils.GramAppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/leaf_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/leaf_logo"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.settings.view.BlockedUsersActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.view.WhatsAppOptInOptOutActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.view.LanguageUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.view.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.address.view.SelectOtherStateActivity"
            android:exported="false" />

        <activity
            android:name=".ui.splash.view.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.address.view.AddOrUpdateAddressActivity"
            android:exported="true" />
        <activity
            android:name=".ui.address.view.StateListActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >

        </activity>
        <activity
            android:name=".ui.language.view.LanguageActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.verifyotp.view.VerifyOtpActivity" />
        <activity
            android:name=".ui.apptour.view.AppTourActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.profileselection.view.ProfileSelectionActivity" />
        <activity
            android:name=".ui.login.view.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.home.view.HomeActivity" />
        <activity android:name=".ui.profile.view.ProfileActivity" />
        <activity android:name=".ui.home.product.activity.ProductDetailsActivity"
            />
        <activity android:name=".ui.cart.view.CartActivity" />
        <activity android:name=".ui.order.view.OrderListActivity" />
        <activity android:name=".ui.checkout.CheckoutStatusActivity" />
        <activity android:name=".ui.offer.OfferDetailActivity" />
        <activity android:name=".ui.orderdetails.OrderDetailsActivity" />
        <activity android:name=".ui.home.product.activity.ProductAllReviewsActivity" />
        <activity android:name=".ui.home.product.activity.productreview.AddEditProductReviewActivity"/>
        <activity android:name=".ui.userprofile.UserProfileActivity"/>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            tools:replace="android:screenOrientation" />
        <activity
            android:name=".ui.webview.view.WebViewActivity"
            android:screenOrientation="portrait" />

        <activity android:name="com.canhub.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>

        <service android:name=".pushnotification.MyFirebaseMessagingService" />
        <service
            android:name=".di.GetAddressIntentService"
            android:exported="true" />

        <service
            android:name=".di.GPSTracker"
            android:exported="true"
            tools:ignore="Instantiatable" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>